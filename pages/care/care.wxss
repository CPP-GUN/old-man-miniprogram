page {
  height: calc(100% - env(safe-area-inset-bottom) - 17px - 5px - 48px);
  display: flex;
  flex-direction: column;
}

.scrollarea {
  height: 100%;
}

.container {
  padding: 0 40rpx;
}

.background-container {
  width: 100%;
  height: 100%;
  display: initial;
  position: fixed;
  z-index: -1;
}

.background-img {
  width: 100%;
  height: 100%;
}

.card-container {
  padding: 10rpx 20px;
  padding-bottom: 20px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 1px 4px 15.6px rgba(59, 57, 104, 0.07);
  margin-top: 20px;
  border-radius: 8px;
}

.card-title-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0;
  transition: all .2s;
}

.card-title {
  font-size: 18px;
  color: var(--main-text-color);
}

.card-title-arrow {
  width: 16px;
  height: 16px;
}

.date-picker-btn {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.date-picker-btn:active {
  background-color: #eef0f4;
}

.picker-arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
  transform: rotate(90deg);
  opacity: 0.6;
}

.base-data-cards-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.base-data-card {
  background-color: #F5F6F6;
  padding: 15px 40rpx;
  border-radius: 8px;
  width: 18%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 5px;
  color: var(--main-text-color);
}

.base-data {
  display: flex;
  flex-direction: row;
  align-items:baseline;
  gap: 10rpx;
}

.base-data-num {
  font-size: 23px;
}

.base-data-unit {
  font-size: 13px;
}

.base-data-label {
  font-size: 13px;
}

.no-medicint-data-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 20px 0;
  font-size: 13px;
}

.link {
  color: var(--main-color);
  background-color: transparent;
  transition: all .3s;
}

.link.hover {
  color: var(--main-color-deep);
  background-color: #F8FBFF;
}

.bottom-hint {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 30px 0rpx;
  margin-top: 20px;
}

.bottom-hint-text {
  color: var(--note-color);
  position: relative;
  font-size: 12px;
}

.bottom-hint-text::before {
  content: "";
  width: 50%;
  height: 1px;
  background-color: var(--note-color);
  position: absolute;
  top: 50%;
  right: calc(-100% + 40rpx);
}

.bottom-hint-text::after {
  content: "";
  width: 50%;
  height: 1px;
  background-color: var(--note-color);
  position: absolute;
  top: 50%;
  left: calc(-100% + 40rpx);
}

.emotion-data-content {
  aspect-ratio: 16 / 9;
  overflow: visible;
  position: relative;
}

.ec-canvas {
  z-index: 1;
  overflow: visible;
}

/* Chart Center Overlay */
.chart-center-overlay {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 0; /* Behind the chart interaction layer if needed, but chart is ring so it's fine */
  pointer-events: none;
}

.heart-circle-outer {
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: rgba(76, 217, 100, 0.05);
  animation: pulse 2s infinite ease-in-out;
}

.heart-circle-inner {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(76, 217, 100, 0.1);
}

.heart-icon {
  width: 48rpx;
  height: 48rpx;
  z-index: 2;
  /* Use CSS filter to color the SVG if it's black, or use a colored SVG */
  filter: invert(66%) sepia(61%) saturate(466%) hue-rotate(83deg) brightness(93%) contrast(89%); /* Matches #4CD964 */
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.1); opacity: 0.8; }
  100% { transform: scale(1); opacity: 0.5; }
}