page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* Prevent page scroll */
}

.scrollarea {
  flex: 1; /* Take remaining height */
  height: 0; /* Necessary for flex child scroll */
  width: 100%;
}

.background-container {
  width: 100%;
  height: 100%;
  display: initial;
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
}

.background-img {
  width: 100%;
  height: 100%;
}

.nav {
  width: 100vw !important;
  padding-bottom: 10px;
  border-bottom: solid 1px #EDEDED;
}

.nav-content-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: relative;
}

.nav-icon-container {
  display: flex;
  flex-direction: row;
  gap: 30rpx;
  justify-content: flex-start;
  margin-left: 40rpx;
  z-index: 2;
  transition: all .3s;
}

.nav-icon-container.hover {
  background-color: #00000014;
  border-radius: 8px;
}

.nav-icon {
  width: 23px;
  height: 23px;
}

.nav-title-container {
  flex-grow: 1;
  text-align: center;
  font-size: 18px;
  position: absolute;
  width: 100%;
}

.notice-list {
  padding: 20rpx 30rpx;
  padding-bottom: 60rpx;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}