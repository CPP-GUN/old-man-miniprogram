page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-color: #f7f8fa;
}

.scrollarea {
  flex: 1;
  height: 0;
  width: 100%;
}

.background-container {
  width: 100%;
  height: 100%;
  display: initial;
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
}

.background-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.background-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(255,255,255,0.8) 0%, rgba(247,248,250,1) 40%);
}

.nav {
  width: 100vw !important;
  padding-bottom: 10px;
  z-index: 100;
}

.nav-content-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: relative;
}

.nav-icon-container {
  display: flex;
  flex-direction: row;
  gap: 30rpx;
  justify-content: flex-start;
  margin-left: 40rpx;
  z-index: 2;
  transition: all .3s;
}

.nav-icon-container.hover {
  background-color: rgba(0,0,0,0.05);
  border-radius: 8px;
}

.nav-icon {
  width: 23px;
  height: 23px;
}

.nav-title-container {
  flex-grow: 1;
  text-align: center;
  font-size: 18px;
  position: absolute;
  width: 100%;
  font-weight: 600;
  color: #333;
}

.container {
  padding: 0 30rpx;
}

/* Playlist Header Card */
.playlist-header-card {
  display: flex;
  flex-direction: row;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
}

.playlist-cover-box {
  width: 240rpx;
  height: 240rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.15);
  position: relative;
  flex-shrink: 0;
}

.playlist-cover {
  width: 100%;
  height: 100%;
}

.playlist-tag {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(0,0,0,0.6);
  backdrop-filter: blur(4px);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.playlist-info {
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}

.playlist-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.2;
  margin-bottom: 10rpx;
}

.playlist-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.playlist-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.play-all-btn {
  background-color: var(--main-color);
  color: #fff;
  display: flex;
  align-items: center;
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(125, 175, 242, 0.4);
}

.play-all-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.play-all-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  filter: brightness(0) invert(1);
}

.upload-btn {
  background-color: rgba(255, 255, 255, 0.8);
  color: var(--main-color);
  display: flex;
  align-items: center;
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: 1rpx solid var(--main-color);
}

.upload-btn:active {
  background-color: rgba(125, 175, 242, 0.1);
}

.upload-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  filter: invert(58%) sepia(68%) saturate(450%) hue-rotate(186deg) brightness(91%) contrast(91%); /* Approximate main-color filter */
}

.song-count {
  font-size: 24rpx;
  color: #999;
}

/* Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.2s ease-out;
}

.modal-container {
  width: 600rpx;
  background-color: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  animation: scaleIn 0.2s ease-out;
}

@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-content {
  padding: 40rpx 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f7fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
}

.cancel-btn {
  color: #999;
  border-right: 1rpx solid #eee;
}

.confirm-btn {
  color: var(--main-color);
  font-weight: 600;
}

.cancel-btn:active, .confirm-btn:active {
  background-color: #f9f9f9;
}

/* Song List */
.song-list-container {
  padding-bottom: 180rpx;
}

.song-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.03);
}

.song-item:last-child {
  border-bottom: none;
}

.song-cover-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
  background-color: #eee;
}

.song-cover {
  width: 100%;
  height: 100%;
}

.play-icon-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
}

.song-item.hover .play-icon-overlay {
  opacity: 1;
}

.small-play-icon {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.active-indicator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.bar {
  width: 6rpx;
  background-color: var(--main-color);
  border-radius: 4rpx;
  animation: equalizer 1s infinite ease-in-out;
}

.bar-1 { height: 20rpx; animation-delay: 0s; }
.bar-2 { height: 30rpx; animation-delay: 0.1s; }
.bar-3 { height: 25rpx; animation-delay: 0.2s; }
.bar-4 { height: 15rpx; animation-delay: 0.3s; }

@keyframes equalizer {
  0%, 100% { height: 15rpx; opacity: 0.6; }
  50% { height: 35rpx; opacity: 1; }
}

.song-details {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.song-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.song-name.highlight {
  color: var(--main-color);
  font-weight: 600;
}

.song-artist {
  font-size: 24rpx;
  color: #999;
}

.song-right {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.song-duration {
  font-size: 24rpx;
  color: #ccc;
  margin-right: 20rpx;
}

.more-btn {
  display: flex;
  gap: 4rpx;
  padding: 10rpx;
}

.dot {
  width: 6rpx;
  height: 6rpx;
  background-color: #ccc;
  border-radius: 50%;
}

/* Fixed Player Control (Dynamic Island Style) */
.player-control-bar {
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 30rpx);
  left: 30rpx;
  right: 30rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 60rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  z-index: 200;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.player-control-bar:active {
  transform: scale(0.98);
}

.player-avatar-container {
  width: 90rpx;
  height: 90rpx;
  position: relative;
  margin-right: 20rpx;
}

.progress-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  padding: 4rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-inner {
  width: 100%;
  height: 100%;
  background: #fff;
  border-radius: 50%;
  overflow: hidden;
  padding: 4rpx;
  box-sizing: border-box;
}

.player-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.player-avatar.rotating {
  animation: rotate 12s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.player-text-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  margin-right: 20rpx;
}

.player-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.player-sub {
  font-size: 22rpx;
  color: #888;
  margin-top: 4rpx;
}

.player-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-right: 10rpx;
}

.p-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(0,0,0,0.03);
}

.p-btn:active {
  background-color: rgba(0,0,0,0.08);
}

.p-icon {
  width: 36rpx;
  height: 36rpx;
}

.bottom-placeholder {
  height: 200rpx;
}

