page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  height: 100%;
}

.background-container {
  width: 100%;
  height: 100%;
  display: initial;
  position: fixed;
  z-index: -1;
}

.background-img {
  width: 100%;
  height: 100%;
}

.container  {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 150rpx 0;
  box-sizing: border-box;
  opacity: 0;
}

.container.fade {
  animation-name: fadeIn;
  animation-duration: .3s;
  animation-fill-mode: forwards;
}

.title-container {
  font-size: 55px;
  font-weight: bold;
  color: #40afd8;
  margin-bottom: 120rpx;
  margin-top: 30rpx;
}

.form-btn {
  display: flex;
  margin-top: 80rpx;
  justify-content: center;
  background-image: linear-gradient(to right,#d0d0d0,#d0d0d0);
  padding: 12px 0;
  width: 450rpx !important;
  border-radius: 30px;
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  cursor: pointer;

}

.form-btn.active {
  background-image: linear-gradient(to right,#27ea85,#14cd6d);
}

.form-btn.active.hover {
  background-image: linear-gradient(to right,#1cd676,#07c160);
}

.service-check-box {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  font-size: 12px;
  align-items: center;
  color: #9b9b9b;
}

.service-check-box .wx-checkbox-input {
  border-radius: 5000rpx;
  width: 13px;
  height: 13px;
}

.wx-checkbox-input-checked:before {
  width: 25px;
  height: 25px;
}

.service-check-box a {
  color: #60b3d7;
  cursor: pointer;
}

.login-hint {
  font-size: 12px;
  margin-top: 20rpx;
  display: flex;
}

.login-hint text {
  color: #9b9b9b;
  width: 100%;
  text-align: center;
}