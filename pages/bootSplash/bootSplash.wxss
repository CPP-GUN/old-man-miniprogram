page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  height: 100%;
}

.background-container {
  width: 100%;
  height: 100%;
  display: initial;
  position: fixed;
  z-index: -1;
}

.background-img {
  width: 100%;
  height: 100%;
}

.container  {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  padding: 150rpx 0;
  box-sizing: border-box;
}

.title-container {
  font-size: 70rpx;
  font-weight: bold;
  color: var(--title-color);
  position: absolute;
  bottom: 120rpx;
  opacity: 1;
}