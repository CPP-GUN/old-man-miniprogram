/* components/notice-area/notice-area.wxss */
.notice-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
}

.notice-time {
  font-size: 12px;
  color: #999;
  margin-bottom: 20rpx;
  background-color: #f0f0f0;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.notice-card {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.alert-card {
  border-left: 8rpx solid #fa5151; /* Red border for alert */
}

.card-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.alert-symbol {
  width: 40rpx;
  height: 40rpx;
  background-color: #fa5151;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 28rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.notice-content {
  font-size: 15px;
  color: #333;
  line-height: 1.6;
  text-align: justify;
  font-weight: 500;
}
