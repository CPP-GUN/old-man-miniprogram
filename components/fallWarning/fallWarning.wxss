.fall-warning-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 10000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fall-warning-container {
  position: relative;
  width: 600rpx;
  border-radius: 30rpx;
  overflow: visible;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  z-index: 0;
}

.warning-icon {
  position: absolute;
  top: -150px;
  right: -70px;
  width: 250px;
  height: 250px;
  z-index: 2;
}

.content {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 30px;
  font-weight: bold;
  color: #333;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 18px;
  letter-spacing: 2px;
  color: var(--main-text-color);
  font-weight: 500;
}

.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.btn {
  width: 380rpx;
  height: 45px;
  border-radius: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: bold;
}

.primary-btn {
  background: linear-gradient(90deg, #FF6B6B 0%, #FF8E53 100%);
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 107, 0.3);
}

.secondary-btn {
  background: #FFF5F0;
  border: 2rpx solid #FF8E53;
  color: var(--main-text-color);
}

.timer {
  margin-top: 30px;
  margin-bottom: 40px;
  font-size: 13px;
  color: var(--main-text-color);
}